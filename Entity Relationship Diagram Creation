--ERD Implementation

--Create Table Bookings section of your database 

CREATE TABLE BOOKINGS (
  BOOKING_ID CHAR (10) PRIMARY KEY,
  USER_ID   CHAR (12) REFERENCES USERS (USER_ID),
  FACILITY_ID CHAR (10) REFERENCES FACILITIES (FACILITY_ID),
  RATE_HR INTEGER (4), 
  DATE DATE (2, 2),
  TIME TIME (2, 4),
  DURATION INT (3)


--Create Table Facilities section of your database 

CREATE TABLE FACILITIES (
  FACILITY_ID CHAR (10) PRIMARY KEY,
  FACILITY_NAME CHAR (20),
  FACILITY_DESCRIPTION CHAR (150), 
  COUNTRY CHAR (15), 
  STATE_PROVINCE CHAR (15), 
  CITY CHAR (15), 
  ADDRESS CHAR (25), 
  ZIP_CODE CHAR (5), 
  START_TIME TIME (2, 4), 
  END_TIME TIME (2, 4), 
  CAPACITY INT (3), 
  FACILITY_TYPE_CODE CHAR (2)


--Create Table Facility Managers 

CREATE TABLE [FACILITY MANAGERS] (
  CONTACT_ID CHAR (10) PRIMARY KEY,
  FULL_NAME CHAR (20), 
  PHONE CHAR (10), 
  EMAIL CHAR (20), 
  FACILITY_ID CHAR (10) REFERENCES FACILITIES (FACILITY_ID)


--Create Table Facility Types section of your database 

CREATE TABLE [FACILITY TYPES] (
  TYPE_CODE CHAR (2) PRIMARY KEY,
  TYPE_NAME CHAR (15),
  DESCRIPTION CHAR (150)



--Create Table Users section of your database

CREATE TABLE USERS (
  USER_ID CHAR (12) PRIMARY KEY, 
FIRST_NAME CHAR (15), 
LAST_NAME CHAR (15), 
EMAIL CHAR (30), 
CITY CHAR (15), 
DATE_JOINED DATE (2, 2)


